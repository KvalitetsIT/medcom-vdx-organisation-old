{
  "logging": {
    "logs": {
      "default": {
        "level": "info"
      }
    }
  },
  "apps": {
    "tls": {
    },
    "http": {
      "servers": {
	"srv80": {
          "automatic_https": {
            "disable": true
          },
          "logs": {
	  },
          "listen": [
            ":80"
          ],
          "routes": [
           {
             "match": [
              {
                "path": [
                   "/"
                ]
              }
             ],
             "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "read_buffer_size": 4096
                  },
                  "upstreams": [
                    {
                      "dial": "organisationservice:8080"
                    }
                  ]
                }
             ]
           }
          ]
	}
      }
    }
  }
}
